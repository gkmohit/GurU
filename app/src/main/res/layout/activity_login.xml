<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.unknown.gkmohit.guru.LoginActivity"
                android:background="@color/grey_background">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome back to GurU"
        android:gravity="center"
        android:textColor="@color/text_view_color"
        android:textSize="@dimen/text_field_text_size"
        android:id="@+id/welcomeBackTextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email address"
        android:id="@+id/emailTextView"
        android:layout_below="@+id/welcomeBackTextView"
        android:layout_centerHorizontal="true"
        android:height="@dimen/text_field_height"
        android:textSize="@dimen/text_field_text_size"
        android:gravity="center"
        android:textColor="@color/text_view_color"
        android:layout_marginTop="50dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/emailEditText"
        android:background="@android:color/white"
        android:height="@dimen/edit_text_height"
        android:textSize="@dimen/edit_text_text_size"
        android:hint="johndoe@example.com"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/emailTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="5dp"
        android:inputType="textEmailAddress"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password"
        android:id="@+id/passwordTextView"
        android:height="@dimen/text_field_height"
        android:textSize="@dimen/text_field_text_size"
        android:gravity="center"
        android:textColor="@color/text_view_color"
        android:layout_below="@+id/emailEditText"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/passwordEditText"
        android:background="@android:color/white"
        android:height="@dimen/edit_text_height"
        android:textSize="@dimen/edit_text_text_size"
        android:hint="Password"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/passwordTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="5dp"
        android:inputType="textPassword"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log In"
        android:id="@+id/logInButton"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/passwordEditText"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot your password ?"
        android:id="@+id/forgotPasswordButton"
        android:layout_below="@+id/logInButton"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:textColor="@color/text_view_color"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not a member yet ? "
        android:id="@+id/notAMemberTextView"
        android:height="@dimen/text_field_height"
        android:gravity="center"
        android:textColor="@color/text_view_color"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/forgotPasswordButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="39dp"
        android:layout_marginStart="39dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:id="@+id/signUpButton"
        android:textColor="@color/text_view_color"
        android:layout_alignTop="@+id/notAMemberTextView"
        android:layout_toRightOf="@+id/notAMemberTextView"
        android:layout_toEndOf="@+id/notAMemberTextView"
        android:background="@null"
        android:layout_alignBottom="@+id/notAMemberTextView"/>


</RelativeLayout>
